A = "мышь"
B = "юла"
C =  "елка" 
t = input("Маленький рост, длинный хвост, серая шубка, острые зубки")
while t != A:
    e = input("Неправильно, попробуйте еще раз")
    if e == A:
        break
y = input("Танцует крошка,А всего одна ножка")
while t != B:
    u = input("Неправильно, попробуйте еще раз")
    if u == B:
        break
i = input("Зимой и летом одним цветом")
while t != C:
    o = input("Неправильно, попробуйте еще раз")
    if o == C:
        print("Молодец! Ты решил все загадки")
